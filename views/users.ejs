<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Người Dùng</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-blue-600 p-4 text-white flex justify-between items-center shadow-md">
        <div class="text-xl font-bold">
            Quản Lý Kho Hàng
        </div>
        <button onclick="location.href='/login'" class="bg-blue-800 hover:bg-blue-700 px-4 py-2 rounded text-white">
            Login
        </button>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-8">
        <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Danh sách người dùng</h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                <thead>
                    <tr class="bg-blue-100 text-left text-gray-700">
                        <th class="py-3 px-4 border-b">#</th>
                        <th class="py-3 px-4 border-b">Tên người dùng</th>
                        <th class="py-3 px-4 border-b">Vai trò</th>
                        <th class="py-3 px-4 border-b">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user, index)=> { %>
                        <tr class="hover:bg-gray-50">
                            <td class="py-2 px-4 border-b">
                                <%= index + 1 %>
                            </td>
                            <td class="py-2 px-4 border-b">
                                <%= user.TenNguoiDung %>
                            </td>
                            <td class="py-2 px-4 border-b">
                                <%= user.VaiTro %>
                            </td>
                            <td class="py-2 px-4 border-b">
                                <a href="/users/edit/<%= user.MaNguoiDung %>"
                                    class="text-blue-600 hover:underline mr-2">Sửa</a>
                                <a href="/users/delete/<%= user.MaNguoiDung %>"
                                    class="text-red-600 hover:underline">Xóa</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <div class="mt-4 text-center">
            <a href="/users/add" class="bg-green-600 hover:bg-green-500 text-white px-6 py-2 rounded shadow-md">Thêm
                người dùng mới</a>
        </div>
    </div>

</body>

</html>